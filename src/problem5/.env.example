# Environment variables for Docker database setup

# PostgreSQL Configuration
POSTGRES_DB=crud_api
POSTGRES_USER=crud_user
POSTGRES_PASSWORD=crud_password
POSTGRES_PORT=5432

# MySQL Configuration
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=crud_api
MYSQL_USER=crud_user
MYSQL_PASSWORD=crud_password
MYSQL_PORT=3306

# Redis Configuration
REDIS_PORT=6379

# Adminer (Database Admin Tool)
ADMINER_PORT=8080

# Application Configuration
NODE_ENV=development
PORT=3000

# Database Connection URLs (for application)
# Uncomment the one you want to use:

# For PostgreSQL:
# DATABASE_URL=postgresql://crud_user:crud_password@localhost:5432/crud_api

# For MySQL:
# DATABASE_URL=mysql://crud_user:crud_password@localhost:3306/crud_api

# For SQLite (default):
DATABASE_URL=sqlite:./data/database.sqlite